<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_btn_default"
    android:orientation="vertical" >

    <com.jeremyfeinstein.slidingmenu.lib.SlidingMenu
        xmlns:sliding="http://schemas.android.com/apk/res-auto"
        android:id="@+id/slidingmenulayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RadioGroup
            android:id="@+id/menugroup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/tj"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:background="@drawable/menu_btn_bg"
                android:button="@null"
                android:drawableLeft="@drawable/tj_icon"
                android:drawablePadding="20dip"
                android:paddingLeft="40dip"
                android:text="@string/tuijian"
                android:textColor="@color/white"
                android:textSize="18sp" 
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/pd"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:background="@drawable/menu_btn_bg"
                android:button="@null"
                android:drawableLeft="@drawable/pd_icon"
                android:drawablePadding="20dip"
                android:paddingLeft="40dip"
                android:text="@string/pindao"
                android:textColor="@color/white"
                android:textSize="18sp" 
                />
            <RadioButton
                android:id="@+id/about"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:background="@drawable/menu_btn_bg"
                android:button="@null"
                android:drawableLeft="@drawable/zf_icon"
                android:drawablePadding="20dip"
                android:paddingLeft="40dip"
                android:text="@string/about"
                android:textColor="@color/white"
                android:textSize="18sp" 
                />
        </RadioGroup>
    </com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>

</LinearLayout>